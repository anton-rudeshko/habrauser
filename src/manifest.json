{
    "name": "Habrauser popup",
    "description": "Open user info in a popup and other useful tools",
    "permissions": ["tabs", "http://habrahabr.ru/*"],
    "version": "0.0.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "css": ["css/main.css"],
            "js": ["js/loader.js"],
            "matches": ["http://habrahabr.ru/*"]
        }
    ],
    "options_page": "html/options.html",
    "background": {
        "scripts": ["js/background.js"]
    },
    "icons": {
        "128": "pix/icon_128.png"
    },
    "web_accessible_resources": ["js/main.js"]
}
